<p id="notice"><%= notice %></p>

<h1>Profiles</h1>
<header>
  <div class="account_header">
    My Profile
  </div>
</header>

<div id="ProfilePage">
  <div id="LeftCol">
    <div id="Photo"></div>
    <div id="ProfileOptions">
      Profile Picture
    </div>
  </div>
  <div id="Info">
    <p>
      <strong>Username:</strong>
      <span><%= @user_id.user.username %></span>
    </p>
    <p>
      <strong>Password:</strong>
      <span><%= @user_id.user.password %></span>
    </p>
    <p>
      <strong>First Name:</strong>
      <span><%= @user_id.fname %></span>
    </p>
    <p>
      <strong>Last Name:</strong>
      <span><%= @user_id.lname %></span>
    </p>
    <p>
      <strong>Email:</strong>
      <span></span>
    </p>


  </div>
  <div style="clear:both"></div>
  <div class="updateButton">
    <button type="button" name="edit" onclick="edit.erb">Update</button>
  </div>
</div>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Profile', new_profile_path %>
