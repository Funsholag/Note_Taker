<p id="notice"><%= notice %></p>

<body style="background-color: #CECAC9<%= @colour %>">


<h1 class= "notesTitle">
  Notes
</h1>
<% if user_signed_in? %>

<% @notes.each do |note| %>
<div class="noteItems">
  <%= link_to (image_tag "notepad-icon.png"), edit_note_path(note) %><br>
  <%= link_to note.title, note%><br>
  <%= distance_of_time_in_words(Time.now, note.updated_at)%><br>
  <%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' } %>
</div>
<% end %>


<br>

<%= link_to 'New Note', new_note_path %>
<br>

<%= form_tag("/notes/search", method: "post") do %>
<%= label_tag(:query, "Search:") %>
<%= text_field_tag(:query) %>
<%= submit_tag("Submit") %>

<% end %>

<h2>Search result:</h2>

<% @search.each do |note| %>
<div class="noteItems">
  <%= link_to (image_tag "notepad-icon.png"), edit_note_path(note) %><br>
  <%= link_to note.title, note%><br>
  <%= distance_of_time_in_words(note.updated_at, Time.now)%><br>
  <%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' } %>
</div>

</body>
<% end %>

<% end %>
